
@{
    ViewData["Title"] = "Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTable Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Product List</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-success" data-toggle="modal" data-target="#modalData"><i class="fas fa-plus-circle"></i> New Product</button>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Barcode</th>
                            <th>Brand</th>
                            <th>Description</th>
                            <th>Category</th>
                            <th>Stock</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td><img style="height:60px ;" src="https://images.unsplash.com/photo-1527864550417-7fd91fc51a46?w=300" class="rounded mx-auto d-block" /></td>
                            <td>12312312</td>
                            <td>Brand 1</td>
                            <td>Description 1</td>
                            <td>Category 1</td>
                            <td>120</td>
                            <td>120</td>
                            <td><span class="badge badge-info">Active</span></td>
                            <td>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td><img style="height:60px ;" src="https://images.unsplash.com/photo-1527864550417-7fd91fc51a46?w=300" class="rounded mx-auto d-block" /></td>
                            <td>12312312</td>
                            <td>Brand 2</td>
                            <td>Description 2</td>
                            <td>Category 2</td>
                            <td>100</td>
                            <td>140</td>
                            <td><span class="badge badge-danger">Inactive</span></td>
                            <td>
                                <button class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i>
                                </button>
                                <button class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Product Details</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtBarcode">Barcode</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtBarcode" name="Barcode">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtBrand">Brand</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtBrand" name="Brand">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <label for="txtDescription">Description</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtDescription" name="Description">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="cboCategory">Category</label>
                                    <select class="form-control form-control-sm" id="cboCategory">
                                        <option value="0">select</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtStock">Stock</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtStock" name="Stock">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtPrice">Price</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtPrice" name="Price">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="cboStatus">Status</label>
                                    <select class="form-control form-control-sm" id="cboStatus">
                                        <option value="1">Active</option>
                                        <option value="0">Inactive</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtImage">Image</label>
                                    <input class="form-control-file" type="file" id="txtImage" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <img id="imgProduct" style="max-width:200px;" src="https://images.unsplash.com/photo-1527864550417-7fd91fc51a46?w=300" class="rounded mx-auto d-block" alt="...">
                        </div>

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


@section Style{
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensions/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensions/css/buttons.dataTables.min.css">

}

                @section Scripts{
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
