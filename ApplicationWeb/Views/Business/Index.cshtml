
@{
    ViewData["Title"] = "Bussines";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Business Data</h6>
    </div>
    <div class="card-body">

        <div class="row">
            <div class="col-sm-12">
                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtDocumentNumber">Document Number</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtDocumentNumber" name="Document Number">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtBusinessName">Business Name</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtBusinessName" name="Business Name">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtEmail">Email</label>
                                    <input type="email" class="form-control form-control-sm input-validate" id="txtEmail" name="Email">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtAddress">Address</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtAddress" name="Address">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtPhone">Phone</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtPhone" name="Phone">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtTax">Tax Percentage</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtTax" name="Tax">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCurrencySymbol">Currency Symbol</label>
                                    <input type="text" class="form-control form-control-sm input-validate" id="txtCurrencySymbol" name="Currency Symbol">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtLogo">Logo</label>
                                    <input class="form-control-file" type="file" id="txtLogo" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="row">
                                <div class="col-sm-12">
                                    <img id="imgLogo" style="max-width:200px;" src="https://images.unsplash.com/photo-1640271443625-3276ed8f62b5?w=300" class="rounded" alt="Logo">
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button class="btn btn-success btn-sm" type="button" id="btnSaveChanges">Save Changes</button>
                                </div>
                            </div>

                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>